{
  "name": "api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node --env-file .env --experimental-strip-types src/server.ts",
    "dev": "node --env-file .env --experimental-strip-types --watch src/server.ts",
    "db:start": "docker run --name db-iflash -e POSTGRES_USER=user -e POSTGRES_PASSWORD=pass -e POSTGRES_DB=mydb -p 5432:5432 -v db-iflash-data:/var/lib/postgresql/data -d postgres:15",
    "db:stop": "docker stop db-iflash && docker rm db-iflash",
    "db:clean": "docker volume rm db-iflash-data || true",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
