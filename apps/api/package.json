    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "typescript": "^5.9.2",
    "ultracite": "5.2.4"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "fastify": "^5.5.0",
    "fastify-type-provider-zod": "^5.0.3",
    "zod": "^4.0.17"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "pnpm dlx ultracite format"
    ]
  }
